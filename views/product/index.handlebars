<section>
  <h1>Products</h1>
  {{#each products}}
  <article class="product">
    <img src="{{productThumbnail}}" width="200" height="150" alt="Product image">
    <h2><a href="/product/{{_id}}">{{productName}}</a></h2>
    <p><strong>Description:</strong>{{productDescription}}</p>
    <p><strong>Asking Price:</strong>${{productAskingPrice}}</p>
  </article>
  {{/each}}
</section>